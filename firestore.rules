rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================================
    // HELPER FUNCTIONS
    // ==================================
    
    // Verifica si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Verifica si es el dueño del documento
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Verifica si el usuario es administrador
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }
    
    // ==================================
    // COLECCIONES
    // ==================================
    
    // Colección de administradores (solo lectura para autenticados)
    match /admins/{email} {
      allow read: if isAuthenticated();
      // Permitir creación durante el signup si el email coincide con el documento
      allow create: if isAuthenticated() && 
                      request.auth.token.email == email &&
                      request.resource.data.email == email;
      allow update, delete: if false; // Solo se puede modificar desde la consola de Firebase
    }
    
    // Colección de usuarios
    match /usuarios/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId);
    }
    
    // Colección de ejercicios
    match /exercises/{exerciseId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Colección de envíos (submissions)
    match /submissions/{submissionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Colección de resultados
    match /results/{resultId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated(); // GitHub Action necesita crear resultados
      allow update: if isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Colección de borradores de código
    match /code_drafts/{draftId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Colección de mapeo de GitHub usernames
    match /github_usernames/{username} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Colección de mapeo de matrículas
    match /matriculas/{matricula} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Colección de configuración (solo lectura para usuarios, escritura para admins)
    match /config/{document} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
